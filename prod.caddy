{
	email {$EMAIL}
}

:8100 {
	handle_path /static/* {
		file_server * {
			root staticfiles
		}
	}
	handle /admin/* {
		reverse_proxy backend:8000
	}
	handle /admin/* {
		reverse_proxy backend:8000
	}
	handle /api/* {
		reverse_proxy backend:8000
	}
	handle /auth/* {
		reverse_proxy backend:8000
	}

	handle_path /* {
		root * dist
		try_files {path} /index.html
		file_server
	}

	log {
		output file /caddy.log
	}
}
